<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="10dp"
        android:gravity="left|center"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/btn_back_press"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:background="@drawable/arrow_right_final"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Information"
            android:textSize="20sp"
            android:gravity="center|left"
            android:textColor="@color/white"
            android:paddingStart="13dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:paddingLeft="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/layout_second"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:text="@string/title_info"

            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="9dp"
            app:cardUseCompatPadding="true">



            <ImageView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:background="@drawable/ir_device_image"
                android:textAlignment="viewStart"
                android:maxLength="258"
                android:gravity="top|start"
                android:elevation="10dp"
                />



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:text="@string/title_description"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btnDelete"
                android:textSize="17dp"
                android:background="@drawable/button_back_final"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords"
                android:text="Delete App"
                />




        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


    </LinearLayout>



</RelativeLayout>
